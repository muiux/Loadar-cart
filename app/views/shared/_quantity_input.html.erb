<div class="flex items-center justify-center rounded bg-gray-100 overflow-hidden p-1 leading-0">
  <%= button_to remove_cart_item_path(id: cart_id, product_id:), method: :post, class: "hover:bg-gray-300 cursor-pointer" do %>
    <%= image_tag "minus.svg", alt: "-" %>
  <% end %>

  <span class="w-6 h-6 text-center font-bold leading-normal">
    <%= quantity %>
  </span>

  <%= button_to create_cart_item_path(id: cart_id, product_id:), method: :post, class: "hover:bg-gray-300 cursor-pointer" do %>
    <%= image_tag "plus.svg", alt: "+" %>
  <% end %>
</div>
